<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idFieldLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:labelFor="@id/idField"
        android:text="Registration Token:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idField"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:ems="10"
        android:enabled="true"
        android:inputType="none"
        android:text="id_not_found"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toEndOf="@+id/idFieldLabel"
        app:layout_constraintStart_toStartOf="@+id/idFieldLabel"
        app:layout_constraintTop_toBottomOf="@+id/idFieldLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>